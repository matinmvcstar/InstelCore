@model InstelCore.Models.MailRequest

@{
    ViewData["Title"] = "تماس با ما";
    Layout = "~/Views/Shared/_Sailor.cshtml";
}
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center" style="font-family: 'B Yekan'">
                <h2 style="font-family: 'B Yekan'">درباره رز آبی</h2>
                <ol>
                    <li>@ViewData["Title"]</li>
                    <li><a href="Index">صفحه اصلی</a></li>
                </ol>
            </div>
        </div>
    </section>
    <!-- End Breadcrumbs -->
    <!-- ======= About Section ======= -->
    <section id="about" class="about" dir="rtl" style="font-family: 'B Yekan'">
        <div class="container">
            <div class="row content">
                <div class="col-lg-6 text-right text-justify">
                    <h2 style="font-family: 'B Yekan'">خدمات طراحی رز آبی</h2>
                    <h3 style="font-family: 'B Koodak'">خدمات طراحی رز آبی با هدف طراحی گرافیک آنلاین از زمان ثبت تا زمان تحویل به مشتری</h3>
                </div>
                <div class="col-lg-6 pt-4 pt-lg-0 text-right text-justify">
                    @using (Html.BeginForm("Contact", "Home"))
                    {
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">نام و نام خانوادگی: </label>
                            @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", placeholder = "مثال: علی حسینی", @value = ViewBag.Fullname })
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">پست الکترونیک: </label>
                            @Html.TextBoxFor(model => model.To, new { @class = "form-control", placeholder = "info@instel.ir" })
                            <span asp-validation-for="To" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">عنوان: </label>
                            @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", placeholder = "مثال: مشکل در سایت" })
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">متن پیام: </label>
                            @Html.TextAreaFor(model => model.Body, new { rows = "3", @class = "form-control", placeholder = "متن پیام" })
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button id="mysubmit" type="button" class="btn btn-primary form-control" data-toggle="modal" data-target="#exampleModal">
                                @ViewData["Message"]
                            </button>
                        </div>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" dir="rtl">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        <h5 class="modal-title" id="exampleModalLabel">ایمیل ارسال شود؟</h5>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">لغو</button>
                                        <div class="form-group">
                                            <button id="mysubmit" title="ارسال پیام" onclick="myFunction()" type="submit" class="btn btn-primary btn-block">
                                                <span id="myDIV" class="spinner-border spinner-border-sm align-middle" role="status" aria-hidden="true"></span>
                                                تایید ارسال
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @*<div class="form-group">
                                <label class="control-label">نام و نام خانوادگی: </label>
                                @Html.TextBoxFor(Model => Model.FullName, new { @class = "form-control" })
                                <input name="fullname" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">پست الکترونیک: </label>
                                @Html.TextBoxFor(Model => Model.To, new { @class = "form-control" })
                                <input name="email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">عنوان: </label>
                                @Html.TextBoxFor(Model => Model.Subject, new { @class = "form-control" })
                                <input name="name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">متن پیام: </label>
                                @Html.TextAreaFor(model => model.Body, new { rows = "3", @class = "form-control" })
                                <input name="msg" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">فایل تصوی: </label>
                                @Html.TextBoxFor(model => model.Attachment, new { type = "file", @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <input type="submit" value="ارسال پیام" class="form-control btn btn-outline-primary btn-block" />
                                <span style="color:green">@ViewBag.Message</span>
                            </div>*@
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- End About Section -->
    <!-- ======= Team Section ======= -->
    <section id="team" class="team section-bg">
        <div class="container">

            <div class="section-title text-right" dir="rtl">
                <h2>تیم رز آبی</h2>
                <p>تیم سخت کوش ما</p>
            </div>

            <div class="row">

                <div class="col-lg-6">
                    <div class="member d-flex align-items-start">
                        <div class="pic">
                            <img src="assets/img/team/team-1.jpg" class="img-fluid" alt="">
                        </div>
                        <div class="member-info text-right">
                            <h4>محمد متین عباسی</h4>
                            <span style="font-family: 'B Koodak'">طراح گرافیک</span>
                            <p style="font-family: 'B Kamran'">فتوشاپ/ایلاستریتور/ایندیزاین/برنامه نویس</p>
                            <div class="social">
                                <a href="#"><i class="ri-twitter-fill"></i></a>
                                <a href="#"><i class="ri-facebook-fill"></i></a>
                                <a href="#"><i class="ri-instagram-fill"></i></a>
                                <a href="#"><i class="ri-linkedin-box-fill"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mt-4 mt-lg-0">
                    <div class="member d-flex align-items-start">
                        <div class="pic">
                            <img src="assets/img/team/team-2.jpg" class="img-fluid" alt="">
                        </div>
                        <div class="member-info text-right">
                            <h4>محمد شیرازی</h4>
                            <span style="font-family: 'B Koodak'">طراح سایت</span>
                            <p style="font-family: 'B Kamran'">طراحی سایت/html-css-javascript</p>
                            <div class="social">
                                <a href="#"><i class="ri-twitter-fill"></i></a>
                                <a href="#"><i class="ri-facebook-fill"></i></a>
                                <a href="#"><i class="ri-instagram-fill"></i></a>
                                <a href="#"><i class="ri-linkedin-box-fill"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </section>
    <!-- End Team Section -->
    <!-- ======= Our Skills Section ======= -->
    <section id="skills" class="skills" dir="rtl">
        <div class="container">

            <div class="section-title text-right">
                <h2>مهارتهای ما</h2>
                <p>مهارت ما را بررسی کنید</p>
            </div>

            <div class="row skills-content">

                <div class="col-lg-6">

                    <div class="progress">
                        <span class="skill">HTML <i class="val">100%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                    <div class="progress">
                        <span class="skill">CSS <i class="val">90%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                    <div class="progress">
                        <span class="skill">JavaScript <i class="val">75%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                </div>

                <div class="col-lg-6">

                    <div class="progress">
                        <span class="skill">Photoshop <i class="val">70%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                    <div class="progress">
                        <span class="skill">Indesign <i class="val">60%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                    <div class="progress">
                        <span class="skill">Illustrator <i class="val">80%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    </section>
    <!-- End Our Skills Section -->

</main>
<!-- End #main -->
<script type="text/javascript">
    function myFunction() {
        var x = document.getElementById("myDIV");
        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }
</script>

